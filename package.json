{
  "name": "code-verifier",
  "version": "1.0.0",
  "description": "Backend Node + Express + TS + Swagger",
  "main": "index.js",
  "scripts": {
    "swagger": "tsoa spec",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "test": "jest",
    "serve:coverage": "npm run test && cd coverage/lcov-report && npx serve",
    "build": "webpack --config webpack.config.js --mode development",
    "build:watch": "npx webpack --watch",
    "start": "node dist/index.js",
    "build:prod": "npx tsc --build tsconfig.prod.json && webpack --config webpack.config.js --mode production",
    "build:prod:clean": "rm -rf dist && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuanIDirazar/node-code-verifier.git"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "swagger",
    "mongoose"
  ],
  "author": "Dirazar Juan Ignacio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JuanIDirazar/node-code-verifier/issues"
  },
  "homepage": "https://github.com/JuanIDirazar/node-code-verifier#readme",
  "dependencies": {
    "@jest/types": "^29.6.3",
    "@typescript-eslint/types": "^7.12.0",
    "@typescript-eslint/visitor-keys": "^7.12.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "globby": "^11.1.0",
    "helmet": "^7.1.0",
    "is-glob": "^4.0.3",
    "minimatch": "^9.0.4",
    "mongoose": "^8.4.1",
    "picocolors": "^1.0.1",
    "prettier": "^3.2.5",
    "semver": "^7.6.0",
    "serve": "^14.2.3",
    "swagger-ui-express": "^5.0.1",
    "ts-api-utils": "^1.3.0",
    "tsconfig-paths": "^4.2.0",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "globals": "^15.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.12.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin": "^0.5.0"
  }
}
